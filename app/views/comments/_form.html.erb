<%= form_for([@quest, @quest.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :size => "50x5" %>
  </div>
  <div class="actions">
    <%= f.submit "Post Comment"%>
  </div>
<% end %>