<tr class="comment">
	<td>
		<span class="commenter"> 
			<% if comment.user_id %>
				<% thisuser = User.find(comment.user_id) %>
				<%= link_to gravatar_for(thisuser, :size => 30), thisuser %>
				<%= link_to comment.commenter, thisuser %>
			<% else %>
				<%= comment.commenter %>
			<% end %>
		</span>
		<span class="timestamp">
			Posted <%= time_ago_in_words(comment.created_at) %> ago.
		</span>
		<span class="body"><%= comment.body.html_safe %></span>
	
		
		<% if current_user?(comment.user) %>
			<p class="comment_destroy">
			  <%= link_to 'Remove', [comment.quest, comment],
						   :confirm => 'Are you sure?',
						   :method => :delete %>
			</p>
		<% end %>
	</td>
</tr>