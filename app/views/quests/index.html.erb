<div class="full_content">
	<div class="quests-search-instructions">
		
		<ul.circle>
			<li>Find your passion</li>
			<li>Join the Quest</li>
		</ul>
	</div>
	
	<h1>Find your Quest!</h1>
	

	
	<%= form_tag quests_path, :method => 'get' do %>
	  <p>
		Search: <%= text_field_tag :search, params[:search] %>
		Category: <%= select("quest", "category", @categories, :selected => @selected_category, :include_blank => 'all' ) %>
		Sort by: <%= select("quest", "sort", {"Date" => "1", "Points" => "2"}, :selected => @selected_sort) %>
		<%= submit_tag "Search", :name => nil %>
	  </p>
	<% end %>

	<div class="quests-list-box">
		<h2 class="myquests-list-label"><%= @upcoming_quests_size %> Upcoming</h2>
		<div class="find-quests-box">
				<%= render @upcoming_quests %>
		</div>
		<div class="clear"></div>
		<%= will_paginate @upcoming_quests, :param_name => :upage %>
	</div>
	<div class="clear"></div>
	
	<div class="quests-list-box">
		<h2 class="myquests-list-label"><%= @active_quests_size %> Active</h2>
		<div class="find-quests-box">
				<%= render @active_quests %>
		</div>
		<div class="clear"></div>
		<%= will_paginate @active_quests, :param_name => :apage %>
	</div>
	<div class="clear"></div>
	
	<div class="quests-list-box">
		<h2 class="myquests-list-label"><%= @completed_quests_size %> Completed</h2>
		<div class="find-quests-box">
				<%= render @completed_quests %>
		</div>
		<div class="clear"></div>
		<%= will_paginate @completed_quests, :param_name => :cpage %>
	</div>
	<div class="clear"></div>
	
	
	
</div>